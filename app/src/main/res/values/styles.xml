<resources>

    <style name="Theme.CouponSwipe" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarItemBackground">@drawable/selectable_background_couponswipe</item>
        <item name="android:popupMenuStyle">@style/PopupMenu.CouponSwipe</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.CouponSwipe</item>
        <item name="android:actionBarTabStyle">@style/ActionBarTabStyle.CouponSwipe</item>
        <item name="android:actionDropDownStyle">@style/DropDownNav.CouponSwipe</item>
        <item name="android:actionBarStyle">@style/ActionBar.Solid.CouponSwipe</item>
        <item name="android:actionModeBackground">@drawable/cab_background_top_couponswipe</item>
        <item name="android:actionModeSplitBackground">@drawable/cab_background_bottom_couponswipe</item>
        <item name="android:actionModeCloseButtonStyle">@style/ActionButton.CloseMode.CouponSwipe</item>
        <item name="android:editTextBackground">@drawable/apptheme_edit_text_holo_light</item>
        <item name="android:actionOverflowButtonStyle">@style/Theme.CouponSwipe.Overflow</item>
        <item name="android:listViewStyle">@style/Theme.CouponSwipe.LightPurpleBackground</item>
        <item name="android:gridViewStyle">@style/Theme.CouponSwipe.LightPurpleBackground.GridView</item>
    </style>

    <style name="Theme.CouponSwipe.LightPurpleBackground">
        <item name="android:background">@color/light_purple_background</item>
        <item name="android:divider">@null</item>
    </style>

    <style name="Theme.CouponSwipe.LightPurpleBackground.GridView">
        <item name="android:padding">@dimen/user_grid_spacing</item>
    </style>

    <style name="Theme.CouponSwipe.Overflow" parent="@android:style/Widget.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_menu_overflow</item>
    </style>

    <style name="ActionBar.Solid.CouponSwipe" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:background">@drawable/ab_solid_couponswipe</item>
        <item name="android:backgroundStacked">@drawable/ab_stacked_solid_couponswipe</item>
        <item name="android:backgroundSplit">@drawable/ab_bottom_solid_couponswipe</item>
        <item name="android:progressBarStyle">@style/ProgressBar.CouponSwipe</item>
        <item name="android:titleTextStyle">@style/ActionBar.Solid.CouponSwipe.TitleTextStyle</item>
    </style>

    <style name="ActionBar.Solid.CouponSwipe.TitleTextStyle"
        parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="ActionBar.Transparent.CouponSwipe" parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@drawable/ab_transparent_couponswipe</item>
        <item name="android:progressBarStyle">@style/ProgressBar.CouponSwipe</item>
    </style>

    <style name="PopupMenu.CouponSwipe" parent="@android:style/Widget.Holo.Light.ListPopupWindow">
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_couponswipe</item>
    </style>

    <style name="DropDownListView.CouponSwipe" parent="@android:style/Widget.Holo.Light.ListView.DropDown">
        <item name="android:listSelector">@drawable/selectable_background_couponswipe</item>
    </style>

    <style name="ActionBarTabStyle.CouponSwipe" parent="@android:style/Widget.Holo.Light.ActionBar.TabView">
        <item name="android:background">@drawable/tab_indicator_ab_couponswipe</item>
    </style>

    <style name="DropDownNav.CouponSwipe" parent="@android:style/Widget.Holo.Light.Spinner">
        <item name="android:background">@drawable/spinner_background_ab_couponswipe</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_couponswipe</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_couponswipe</item>
    </style>

    <style name="ProgressBar.CouponSwipe" parent="@android:style/Widget.Holo.Light.ProgressBar.Horizontal">
        <item name="android:progressDrawable">@drawable/progress_horizontal_couponswipe</item>
    </style>

    <style name="ActionButton.CloseMode.CouponSwipe" parent="@android:style/Widget.Holo.Light.ActionButton.CloseMode">
        <item name="android:background">@drawable/btn_cab_done_couponswipe</item>
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.CouponSwipe.Widget" parent="@android:style/Theme.Holo">
        <item name="android:popupMenuStyle">@style/PopupMenu.CouponSwipe</item>
        <item name="android:dropDownListViewStyle">@style/DropDownListView.CouponSwipe</item>
    </style>

    <style name="AuthBackground">
        <item name="android:background">@drawable/background_fill</item>
    </style>

    <style name="AuthBackgroundImage">
        <item name="android:scaleType">fitStart</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:src">@drawable/background</item>
    </style>

    <style name="AuthTitle" parent="android:Widget.Holo.Light.TextView">
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">40sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:text">@string/app_name</item>
    </style>

    <style name="AuthFieldContainer">
        <item name="android:background">@android:color/white</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginTop">@dimen/login_vertical_margin</item>
        <item name="android:orientation">vertical</item>
        <item name="android:paddingBottom">@dimen/login_vertical_padding</item>
        <item name="android:paddingLeft">@dimen/login_horizontal_padding</item>
        <item name="android:paddingRight">@dimen/login_horizontal_padding</item>
        <item name="android:paddingTop">@dimen/login_vertical_padding</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_below">@id/titleTextView</item>
    </style>

    <style name="AuthEditText" parent="android:Widget.Holo.Light.EditText">
        <item name="android:ems">10</item>
        <item name="android:textColorHint">@color/light_grey</item>
        <item name="android:textSize">17sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="AuthButton" parent="android:Widget.Holo.Light.Button">
        <item name="android:background">@drawable/button_custom</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="android:textSize">15sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>
