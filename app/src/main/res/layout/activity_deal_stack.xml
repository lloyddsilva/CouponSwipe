<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".DealStackActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="#ff6cbf49">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.25">

            <Button
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="54dp"
                android:layout_height="wrap_content"
                android:id="@+id/user_profile_button"
                android:layout_gravity="center_horizontal|left|top"
                android:onClick="openUserProfile"
                android:background="@drawable/user" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="CouponSwipe"
                android:id="@+id/textView"
                android:textSize="30dp"
                android:textStyle="bold"
                android:layout_gravity="center_horizontal"
                android:layout_alignBottom="@+id/deal_shortlist_button"
                android:layout_centerHorizontal="true" />

            <Button
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="54dp"
                android:layout_height="wrap_content"
                android:id="@+id/deal_shortlist_button"
                android:layout_gravity="center_horizontal|right|top"
                android:background="@drawable/list"
                android:layout_alignParentTop="true"
                android:onClick="openShortlist"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="#ffffffff"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <com.andtinder.view.CardContainer
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/layoutview"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#ff6cbf49" />

        </LinearLayout>

        <Button
            android:layout_width="54dp"
            android:layout_height="wrap_content"
            android:id="@+id/PreferencesButton"
            android:layout_gravity="center_horizontal"
            android:onClick="openPreferences"
            android:background="@drawable/preferences"
            android:layout_weight="0.25" />

    </LinearLayout>

</RelativeLayout>
