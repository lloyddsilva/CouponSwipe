<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context=".DealStackActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:background="#e9e4ed">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:background="#ffffffff"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <com.andtinder.view.CardContainer
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/layoutview"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="#e9e4ed" />

        </LinearLayout>

        <Button
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:id="@+id/PreferencesButton"
            android:layout_gravity="center_horizontal"
            android:onClick="openPreferences"
            android:background="@drawable/preferences"
            android:layout_weight="0.25" />

    </LinearLayout>

</RelativeLayout>
